@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_cms.cshtml";
    string userName = User.Identity.Name;
    String ServerURL = CHamRieng.Get_Domain();
    String sDate = DateTime.Now.ToString("dd/MM/yyyy");
    String ParentID = "Index";

    int iID_MaNgonNgu = 1;
    if (Session["LANGUAGECODE"] == null || Convert.ToString(Session["LANGUAGECODE"]) == "")
    {
        Session["LANGUAGEID"] = 1;
        Session["LANGUAGECODE"] = "vn";
    }
    else
    {
        iID_MaNgonNgu = Convert.ToInt32(Session["LANGUAGEID"]);
    }
    Hashtable Lang = NgonNgu.GetLanguage(Convert.ToString(Session["LANGUAGECODE"]), Server.MapPath("~/XML/" + Session["LANGUAGECODE"] + ".xml"), "pageApp");

    SelectOptionList ddlDN = CHoSo.DDLDoanhNghiep();

    CHoSoSearch hoso = new CHoSoSearch();
    hoso.iID_MaTrangThai = -1;

    String page = CString.SafeString(Request.QueryString["page"]);
    int CurrentPage = 1;

    if (String.IsNullOrEmpty(page) == false)
    {
        CurrentPage = Convert.ToInt32(page);
    }

    int nMax = Globals.PageSize;
    int iTu = (CurrentPage - 1) * nMax;
    DataTable dt = clBaoCao.CVBaoCao01(Model, CurrentPage, nMax);
    double nums = clBaoCao.CVBaoCao01_Count(Model);
    int RC = dt.Rows.Count;
    int TotalPages = (int)Math.Ceiling(nums / nMax);

    String strPhanTrang = Pagings.PageLinks_Cms(String.Format("Trang {0}/{1}: ", CurrentPage, TotalPages), CurrentPage, TotalPages, x => Url.Action("BaoCao01", "CVReport", new
    {
        TuNgay = Model.TuNgay,
        DenNgay = Model.DenNgay,
        page = x
    }));

    String strPrint = Url.Action("BaoCao01Print", "CVReport", new { TuNgay = Model.TuNgay, DenNgay = Model.DenNgay });
}
<script type="text/javascript">
    $(function () {
        var a = '@TempData["msg"]';
        if (a == 'success') {
            showToast_Success();
        }
        else if (a == 'error'){
            showToast_Error();
        }
    })
</script>
