                            <button class="btn btn-danger" type="button" id="btnReset">Nhập lại</button>
                        </div>
                    </div>
                }
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#formReports').bootstrapValidator({
                            message: 'This value is not valid',
                            feedbackIcons: {
                                valid: 'glyphicon glyphicon-ok',
                                invalid: 'glyphicon glyphicon-remove',
                                validating: 'glyphicon glyphicon-refresh'
                            },
                            fields: {
                                Index_viTuNgay: {
                                    validators: {
                                        date: {
                                            format: 'DD/MM/YYYY',
                                            message: 'Từ ngày không đúng định dạng!'
                                        }
                                    }
                                },
                                Index_viDenNgay: {
                                    validators: {
                                        date: {
                                            format: 'DD/MM/YYYY',
                                            message: 'Đến ngày không đúng định dạng!'
                                        }
                                    }
                                }
                            }
                        });

                        $('#btnReset').click(function () {
                            $('#formReports').data('bootstrapValidator').resetForm(true);
                        });
                    });
                </script>
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title text-uppercase">THỐNG KÊ LÔ HÀNG THEO THÁNG ĐÃ CÓ KẾT QUẢ KIỂM TRA</h3>
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#" onclick="javascript:history.go(-1)"><i class="fa fa-reply-all"></i> Quay lại</a></li>
                    </ul>
                </div><!-- /.box-header -->
                <div class="box-body no-padding pre-scrollable">
                    <div class="table-responsive" id="divWord">
                        <table id="tblListData" class="table table-bordered table-hover table-striped dataTable">
                            <thead>
                                <tr>
                                    <th style="text-align: center;" align="center">STT</th>
                                    <th style="text-align: center;" align="center">Mã hồ sơ</th>
                                    <th style="text-align: center;" align="center">Số tiếp nhận</th>
                                    <th style="text-align: center;" align="center">Doanh nghiệp</th>
                                    <th style="text-align: center;" align="center">Địa chỉ</th>
                                    <th style="text-align: center;" align="center">Tên TACN</th>
                                    <th style="text-align: center;" align="center">Mã số công nhận TACN</th>
                                    <th style="text-align: center;" align="center">Nhóm TACN</th>
                                    <th style="text-align: center;" align="center">Phân nhóm TACN</th>
                                    <th style="text-align: center;" align="center">Loại TACN</th>
                                    <th style="text-align: center;" align="center">Phân loại</th>
                                    <th style="text-align: center;" align="center">Bản chất</th>
                                    <th style="text-align: center;" align="center">Số lượng</th>
                                    <th style="text-align: center;" align="center">Khối lượng</th>
                                    <th style="text-align: center;" align="center">Khối lượng (Tấn)</th>
                                    <th style="text-align: center;" align="center">Giá trị hàng hóa</th>
                                    <th style="text-align: center;" align="center">Đơn vị tính giá trị hàng hóa</th>
                                    <th style="text-align: center;" align="center">Giá trị hàng hóa (USD)</th>
                                    <th style="text-align: center;" align="center">Nước sản xuất</th>
                                    <th style="text-align: center;" align="center">Cảng nhập khẩu</th>
                                    <th style="text-align: center;" align="center">Thời gian</th>
                                    <th style="text-align: center;" align="center">Hình thức kiểm tra</th>
                                    <th style="text-align: center;" align="center">Số giấy chứng nhận hợp quy</th>
                                    <th style="text-align: center;" align="center">Tên tổ chức đánh giá sự phù hợp</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (dt.Rows.Count > 0)
                                {
                                    for (int i = 0; i < dt.Rows.Count; i++)
                                    {
                                        DataRow r = dt.Rows[i];

                                        string sMua_FromDate = "", sMua_ToDate = "";

                                        String sKhoiLuong = "", sKhoiLuongTan = "", sSoLuong = "";
                                        DataTable dtKhoiLuong = clHangHoa.Get_ThongTinKhoiLuong(Convert.ToInt64(r["iID_MaHangHoa"]));
                                        if (dtKhoiLuong.Rows.Count > 0)
                                        {
                                            for (int k = 0; k < dtKhoiLuong.Rows.Count; k++)
                                            {
                                                sKhoiLuong += Convert.ToString(dtKhoiLuong.Rows[k]["rKhoiLuong"]) + " " + Convert.ToString(dtKhoiLuong.Rows[k]["sDonViTinhKL"]) + "; ";
                                                sKhoiLuongTan += Convert.ToString(dtKhoiLuong.Rows[k]["rKhoiLuongTan"]) + "; ";
                                                sSoLuong += Convert.ToString(dtKhoiLuong.Rows[k]["rSoLuong"]) + " " + Convert.ToString(dtKhoiLuong.Rows[k]["sDonViTinhSL"]) + "; ";
                                            }
                                        }
                                        dtKhoiLuong.Dispose();

                                        HoSoXNCLModels hsXNCL = clHangHoa.GetHoSoXNCL(Convert.ToInt64(r["iID_MaHoSo"]), Convert.ToInt64(r["iID_MaHangHoa"]));

                                        if (String.IsNullOrEmpty(Convert.ToString(r["sMua_FromDate"])) == false)
                                        {
                                            sMua_FromDate = Convert.ToDateTime(r["sMua_FromDate"]).ToString("dd/MM/yyyy");
                                        }
                                        if (String.IsNullOrEmpty(Convert.ToString(r["sMua_ToDate"])) == false)
                                        {
                                            sMua_ToDate = Convert.ToDateTime(r["sMua_ToDate"]).ToString("dd/MM/yyyy");
                                        }

                                        <tr>
                                            <td align="center">@r["rownum"]</td>
                                            <td align="left">@Convert.ToString(r["sMaHoSo"])</td>
                                            <td align="left">@Convert.ToString(r["sSoTiepNhan"])</td>
                                            <td align="left">@Convert.ToString(r["sTenDoanhNghiep"])</td>
                                            <td align="left">@Convert.ToString(r["sMua_DiaChi"])</td>
                                            <td align="left">@Convert.ToString(r["sTenHangHoa"])</td>
                                            <td align="left">@Convert.ToString(r["sMaSoCongNhan"])</td>
                                            <td align="left">@Convert.ToString(r["sTenNhom"])</td>
                                            <td align="left">@Convert.ToString(r["sTenPhanNhom"])</td>
                                            <td align="left">@Convert.ToString(r["sTenLoaiHangHoa"])</td>
                                            <td align="left">@Convert.ToString(r["sTenPhanLoai"])</td>
                                            <td align="left">@Convert.ToString(r["sBanChat"])</td>
                                            <td align="left">@(sSoLuong)</td>
                                            <td align="left">@sKhoiLuong</td>
                                            <td align="left">@sKhoiLuongTan</td>
                                            <td align="right">@CommonFunction.DinhDangSo(r["rGiaVN"])</td>
                                            <td align="left">@Convert.ToString(r["sDonViTinh"])</td>
                                            <td align="right">@CommonFunction.DinhDangSo(r["rGiaUSD"])</td>
                                            <td align="left">@Convert.ToString(r["sTenQuocGia"])</td>
                                            <td align="left">@Convert.ToString(r["sMua_NoiNhan"])</td>
                                            <td align="left">@Convert.ToString(sMua_FromDate + " - " + sMua_ToDate)</td>
                                            <td align="left">@Convert.ToString(r["sLoaiHinhThucKiemTra"])</td>
                                            <td align="left">@Convert.ToString(r["sSoThongBaoKetQua"])</td>
                                            <td align="left">@Convert.ToString(hsXNCL.sTenToChuc)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div><!-- /.box-body -->
                <div class="box-footer clearfix">
                    <div class="col-xs-6">
                        @*<a class="btn btn-warning btnXuatWord" href="#" id="btnXuatWord">Xuất word</a>*@
                        <a class="btn btn-warning" href="@(strPrint)">Print</a>
                        <a class="btn btn-danger" href="#" onclick="javascript:history.go(-1)">Thoát</a>
                    </div>
                    <div class="col-xs-6">
                        @MvcHtmlString.Create(strPhanTrang)
                    </div>
                </div>
            </div>
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
