    {
        Session["LANGUAGEID"] = 1;
        Session["LANGUAGECODE"] = "vn";
    }
    else
    {
        iID_MaNgonNgu = Convert.ToInt32(Session["LANGUAGEID"]);
    }
    Hashtable Lang = NgonNgu.GetLanguage(Convert.ToString(Session["LANGUAGECODE"]), Server.MapPath("~/XML/" + Session["LANGUAGECODE"] + ".xml"), "pageApp");

    SelectOptionList ddlPhanLoai = clDanhMuc.GetDDL_TenKhoa("PHANLOAITACN");


    DataTable dt = clBaoCao.CVBaoCao06(Model);

    String strPrint = Url.Action("BaoCao06Print", "CVReport", new { TuNgay = Model.TuNgay, DenNgay = Model.DenNgay });
    String strExport = Url.Action("BaoCao06ExpExcel", "CVReport", new { TuNgay = Model.TuNgay, DenNgay = Model.DenNgay });
