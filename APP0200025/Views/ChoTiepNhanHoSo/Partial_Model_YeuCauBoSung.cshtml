@using System
@using System.Collections.Specialized
@using DomainModel
@using DomainModel.Controls

@{
    Layout = null;
    string ParentID = "BS";
}
@using (Ajax.BeginForm("YeuCauBoSungSubmit", "ChoTiepNhanHoSo", new AjaxOptions
{
    OnSuccess = "OnSuccessYeuCauBoSung",
    OnBegin = "OnBeginYeuCauBoSung"
}, new
{
    id = "formYeuCau",
    enctype = "multipart/form-data",
    @class = "form-horizontal"
}))
{
    <script type="text/javascript">
        function OnBeginYeuCauBoSung() {
            $('html, body').animate({ scrollTop: 10 }, 'slow');
        }

        function OnSuccessYeuCauBoSung(data) {
            location.reload();
            $('#YeuCauBoSung').modal('hide');
        }
    </script>
    @Html.AntiForgeryToken()
    @Html.Hidden(ParentID + "_iID_MaHoSo", 0)
    <div id="YeuCauBoSung" class="modal fade" role="basic" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title upperCase" id="myModalLabel">YÊU CẦU BỔ SUNG HỒ SƠ</h4>
                </div>
                <div class="modal-body">
                    <div class="box-body">
                        <div class="row">
                            <div class="form-group">
                                <label class="col-lg-12 text-align-left">Nhập lý do ý kiến<span style="color:#FF0000"> (*)</span></label>
                                <div class="col-lg-12">
                                    @MvcHtmlString.Create(MyHtmlHelper.TextArea(ParentID, "", "sNoiDung", "", "class=\"form-control\" cols=\"30\" rows='6'"))
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-12">File Đính kèm</label>
                                <div class="col-lg-12">
                                    <input class="form-control input-sm" type="file" name="fileUpload" id="fileUpload" />
                                    <span style="color:red">Định dạng: jpg, jpeg, pdf, tif</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Thoát</button>
                    <button type="button" class="btn btn-primary" id="btnBoSungYeuCau">Gửi doanh nghiệp</button>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#formYeuCau').bootstrapValidator({
            message: 'This value is not valid',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                BS_sNoiDung: {
                    validators: {
                        notEmpty: {
                            message: 'Bạn cần nhập lý do hoặc ý kiến'
                        }
                    }
                }
            }
        });
    });
</script>
