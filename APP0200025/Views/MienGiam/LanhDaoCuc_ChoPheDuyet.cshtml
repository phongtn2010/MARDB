                                                }
                                                else
                                                {
                                                    sNgayTiepNhan = "";
                                                }

                                                string sUserNguoiXem = Convert.ToString(r["sUserNguoiXem"]);
                                                String strView = MyHtmlHelper.ActionLink(Url.Action("LanhDaoCuc_ChoPheDuyet_Detail", "MienGiam", new { iID_MaHoSo = r["iID_MaHoSo"] }), "<span class='badge bg-blue'><i class='fa fa-fw fa-eye fa-lg'></i></span>", "Detail", "");

                                                <tr>
                                                    <td style="text-align: center;">@r["rownum"]</td>
                                                    <td>@r["sMaHoSo"]</td>
