    <div class="row">
         @using (Html.BeginForm("LanhDaoCuc_ChoPheDuyet_KySo", "MienGiam", new { ParentID = ParentID }, FormMethod.Post, new { @class = "form-horizontal" }))
         {
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">DANH SÁCH HỒ SƠ</h3>
                        <ul class="pagination pagination-sm no-margin pull-right">
