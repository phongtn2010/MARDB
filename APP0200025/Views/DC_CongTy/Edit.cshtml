    String iID_MaCongTy = CString.SafeString(Convert.ToString(ViewData["iID_MaCongTy"]));

    String sTenCongTy = "", sTenTiengAnh = "", sDiaChi = "", sDiaChi_In = "", sDienThoai = "", sMobile = "", sWebsite = "", sMST = "", sNoiDung = "", sNoiDungDuoi = "", tgTrangThai = "";
