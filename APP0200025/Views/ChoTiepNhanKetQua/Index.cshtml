                            <tbody>
                                @{
                                    if (RC > 0)
                                    {
                                        for (int i = 0; i < RC; i++)
                                        {
                                            r = dt.Rows[i];

                                            string sUserNguoiXem = Convert.ToString(r["sUserNguoiXem"]);
                                            String strEdit = MyHtmlHelper.ActionLink(Url.Action("Edit", "ChoTiepNhanKetQua", new { iID_MaHangHoa = r["iID_MaHangHoa"] }), "<span class='badge bg-blue'><i class='fa fa-fw fa-check'></i></span>", "Edit", "");
