                                                                    <td>@r["sTenDoanhNghiep"]</td>
                                                                    <td>@r["sTenHangHoa"]</td>
                                                                    <td>@MvcHtmlString.Create(MyHtmlHelper.LabelForDropDownList(ttDDL, r["iID_MaTrangThaiHH"], "iID_MaTrangThai")) </td>
