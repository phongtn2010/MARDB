@using System
@using System.Data
@using System.Data.SqlClient
@using System.Configuration
@using System.Collections
@using DomainModel
@using DomainModel.Controls
@using DATA0200025
@using DATA0200025.Models
@using APP0200025.Models
@model DATA0200025.Models.HoSoModels
@{
    Layout = null;
    string ParentID = "Edit";
}

<div class="box-header with-border">
    <h3 class="box-title">Bên mua hàng</h3>

</div><!-- /.box-header -->
<div class="box-body">
    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label for="">Tên bên mua hàng</label>
                @MvcHtmlString.Create(MyHtmlHelper.Label(Model.sMua_Name, "sMua_Name", "", "type=\"text\" class=\"form-control\""))

            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group">
                <label for="">Fax<span style="color: red;">&nbsp;*</span></label>
                @MvcHtmlString.Create(MyHtmlHelper.Label(Model.sMua_Fax, "sMua_Fax", "", "type=\"text\" class=\"form-control\""))

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label for="">Địa chỉ</label>

                @MvcHtmlString.Create(MyHtmlHelper.Label(Model.sMua_DiaChi, "sMua_DiaChi", "", "type=\"text\" class=\"form-control\""))
            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group">
                <label for="">Điện thoại<span style="color: red;">&nbsp;*</span></label>

                @MvcHtmlString.Create(MyHtmlHelper.Label(Model.sMua_Tel, "sMua_Tel", "", "type=\"text\" class=\"form-control\""))
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label for="">Nơi nhận hàng</label>

                @MvcHtmlString.Create(MyHtmlHelper.Label(Model.sMua_NoiNhan, "sMua_NoiNhan", "", "type=\"text\" class=\"form-control\""))
            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group">
                <label for="">
                    Thời gian nhập khẩu dự kiến

                    <span style="color: red;">&nbsp;*</span>
                </label>

                @MvcHtmlString.Create(MyHtmlHelper.Label(string.Format("{0}-{1}", Model.sMua_FromDate.ToString("dd/MM/yyyy"), Model.sMua_ToDate.ToString("dd/MM/yyyy")), "sMua_FromDate", "", "type=\"text\" class=\"form-control\""))
            </div>
        </div>
    </div>

</div>
