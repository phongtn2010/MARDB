@using System.Data
@using DATA0200025
@using DATA0200025.Models
@using DomainModel
@using DomainModel.Controls
@model HangHoaModels
@{
    Layout = null;
    String sTenNhomTACN = clDanhMuc.Get_Name_DanhMuc("NHOMTACN", Convert.ToString(Model.iID_MaNhom));
    String sTenLoaiTACN = clDanhMuc.Get_Name_DanhMuc("LOAITACN", Convert.ToString(Model.iID_MaNhom));
}

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title text-uppercase">Thông tin chi tiết TACN</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="form-group">
                    <label for="lableTenHangHoa" class="col-sm-2 control-label" style="text-align:left">Tên TACN:</label>
                    <div class="col-sm-10">
                        <input id="lableTenHangHoa" name="lableTenHangHoa" value="@Model.sTenHangHoa" class="form-control" readonly />
                    </div>
                </div><br /><br />
                <div class="form-group">
                    <label for="lableNhomTACN" class="col-sm-2 control-label" style="text-align:left">Nhóm TACN:</label>
                    <div class="col-sm-10">
                        <input id="lableNhomTACN" name="lableNhomTACN" value="@(sTenNhomTACN)" class="form-control" readonly />
                    </div>
                </div><br /><br />
                <div class="form-group">
                    <label for="lableLoaiTACN" class="col-sm-2 control-label" style="text-align:left">Loại TACN:</label>
                    <div class="col-sm-10">
                        <input id="lableLoaiTACN" name="lableLoaiTACN" value="@(sTenLoaiTACN)" class="form-control" readonly />
                    </div>
                </div><br />
            </div>
        </div>
    </div>
</div>
