@model  DATA0200025.Models.HoSoModels
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout_cms.cshtml";
    string ParentID = "Detail";
}

<div class="row">
    <div class="col-md-12">
        <!-- Custom Tabs -->
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab_1" data-toggle="tab">Giấy đăng ký kiểm tra xác nhận chất lượng</a></li>
                <li><a href="#tab_2" data-toggle="tab">Lịch sử xử lý hồ sơ</a></li>

                <li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-gear"></i></a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_1">

                    @{Html.RenderPartial("~/Views/Partial/Partial_Detail.cshtml");}
                    <form action="@Url.Action("TiepNhanHoSo", "ChuyenVien", new { ParentID = ParentID })" class="form-horizontal" id="submit_form" method="POST">
                        @Html.Hidden(ParentID + "_DuLieuMoi", ViewData["DuLieuMoi"])
                        @Html.Hidden(ParentID + "_iID_MaHoSo", Model.iID_MaHoSo)
                        <div class="box-footer clearfix text-center">
                            @*<button class="btn btn-primary btn-sm" type="submit">Tiếp nhận</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp*@
                            <a class="btn btn-sm" style="background-color:#10de79;color:white;" href="@Url.Action("SoanPhuLuc","ChuyenVien",new {iID_MaHoSo=Model.iID_MaHoSo})">Soạn phụ lục</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
