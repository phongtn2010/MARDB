@using System
@using System.Data
@using System.Data.SqlClient
@using System.Configuration
@using System.Collections
@using DomainModel
@using DomainModel.Controls
@using DATA0200025
@using DATA0200025.SearchModels
@using APP0200025.App_Code
@using APP0200025.Models
@model sHoSoModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    String ServerURL = CHamRieng.Get_Domain();
    String sDate = DateTime.Now.ToString("dd/MM/yyyy");
    String ParentID = "Index";

    int iID_MaNgonNgu = 1;
    if (Session["LANGUAGECODE"] == null || Convert.ToString(Session["LANGUAGECODE"]) == "")
    {
        Session["LANGUAGEID"] = 1;
        Session["LANGUAGECODE"] = "vn";
    }
    else
    {
        iID_MaNgonNgu = Convert.ToInt32(Session["LANGUAGEID"]);
    }
    Hashtable Lang = NgonNgu.GetLanguage(Convert.ToString(Session["LANGUAGECODE"]), Server.MapPath("~/XML/" + Session["LANGUAGECODE"] + ".xml"), "pageApp");


    string TenBang = "BC_Vung";
    String sDanhSachChucNangCam = BaoMat.DanhSachChucNangCam(User.Identity.Name, TenBang);

    String _TrangThaiHoSo = CString.SafeString(Request.QueryString["_TrangThaiHoSo"]);
    String _TieuDe = CString.SafeString(Request.QueryString["_TieuDe"]);
    String _FromDate = CString.SafeString(Request.QueryString["_FromDate"]);
    String _ToDate = CString.SafeString(Request.QueryString["_ToDate"]);

    int Page = Model.Page;

    int CurrentPage = 1;
    if (Page != 0)
    {
        CurrentPage = Page;
    }

    if (Model.PageSize == 0)
    {
        Model.PageSize = Globals.PageSize;
    }
    int nMax = Model.PageSize;
    int iTu = (CurrentPage - 1) * nMax;

    DataTable dt = clHoSo.GetDataTable(Model, CurrentPage, nMax);
    double nums = clHoSo.GetCount(Model);
    int RC = dt.Rows.Count;
    int TotalPages = (int)Math.Ceiling(nums / nMax);



    DataRow r;
    SelectOptionList ttDDL = clTrangThai.GetDDL();
    String strPhanTrang = Pagings.PageLinks_Cms(String.Format("Trang {0}/{1}: ", CurrentPage, TotalPages), CurrentPage, TotalPages, x => Url.Action("Index", "LanhDaoPhong", new { LoaiDanhSach = Model.LoaiDanhSach, sMaHoSo = Model.sMaHoSo, sTenDoanhNghiep = Model.sTenDoanhNghiep, sTenTACN = Model.sTenTACN, FromDate = Model.TuNgayDen, ToDate = Model.DenNgayDen, page = x }));

}
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                @using (Html.BeginForm("Search", "LanhDaoPhong", new { ParentID = ParentID }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="box-header with-border">
                        <h3 class="box-title">@Lang["ChucNang_Item09"].ToString()</h3>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" type="button" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <button class="btn btn-box-tool" type="button" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group">
                            <div class="col-xs-1 text-align-right"><label class="control-label">Mã hồ sơ</label></div>
                            <div class="col-xs-5">
                                @MvcHtmlString.Create(MyHtmlHelper.TextBox(ParentID, Model.sMaHoSo, "sMaHoSo", "", "placeholder=\"Mã hồ sơ\" type=\"text\" class=\"form-control\""))
                            </div>

                            <div class="col-xs-1 text-align-right">
                                <label class="control-label">Tên TACN</label>
                            </div>
                            <div class="col-xs-5">
                                @MvcHtmlString.Create(MyHtmlHelper.TextBox(ParentID, Model.sTenTACN, "sTenTACN", "", "placeholder=\"Tên TACN\" type=\"text\" class=\"form-control\""))
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-1 text-align-right"><label class="control-label">Ngày đến</label></div>
                            <div class="col-xs-5">
                                <div class="row">
                                    <div class="col-xs-5">
                                        @MvcHtmlString.Create(MyHtmlHelper.DatePicker(ParentID, Model.TuNgayDen, "TuNgayDen", "", "placeholder=\"Từ ngày\" type=\"text\" class=\"form-control\" autocomplete=\"off\""))
                                    </div>
                                    <div class="col-xs-2 text-align-center"><b>-</b></div>
                                    <div class="col-xs-5">
                                        @MvcHtmlString.Create(MyHtmlHelper.DatePicker(ParentID, Model.DenNgayDen, "DenNgayDen", "", "placeholder=\"Đến ngày\" type=\"text\" class=\"form-control\" autocomplete=\"off\""))
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-1 text-align-right">
                                <label class="control-label">Tên doanh nghiệp</label>
                            </div>
                            <div class="col-xs-5">
                                @MvcHtmlString.Create(MyHtmlHelper.TextBox(ParentID, Model.sTenDoanhNghiep, "sTenDoanhNghiep", "", "placeholder=\"Tên doanh nghiệp\" type=\"text\" class=\"form-control\""))
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-1 text-align-right">
                                <label class="control-label">Số tiếp nhận</label>
                            </div>
                            <div class="col-xs-5">
                                @MvcHtmlString.Create(MyHtmlHelper.TextBox(ParentID, Model.sSoTiepNhan, "sSoTiepNhan", "", "placeholder=\"Số tiếp nhận\" type=\"text\" class=\"form-control\""))
                            </div>
                            <div class="col-xs-1 text-align-right"><label class="control-label">Ngày tiếp nhận</label></div>
                            <div class="col-xs-5">
                                <div class="row">
                                    <div class="col-xs-5">
                                        @MvcHtmlString.Create(MyHtmlHelper.DatePicker(ParentID, Model.TuNgayTiepNhan, "TuNgayTiepNhan", "", "placeholder=\"Từ ngày tiếp nhận\" type=\"text\" class=\"form-control\" autocomplete=\"off\""))
                                    </div>
                                    <div class="col-xs-2 text-align-center"><b>-</b></div>
                                    <div class="col-xs-5">
                                        @MvcHtmlString.Create(MyHtmlHelper.DatePicker(ParentID, Model.DenNgayTiepNhan, "DenNgayTiepNhan", "", "placeholder=\"Đến ngày tiếp nhận\" type=\"text\" class=\"form-control\" autocomplete=\"off\""))
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-1 text-align-right"><label class="control-label">Trạng thái hồ sơ</label></div>
                            <div class="col-xs-5">
                                @MvcHtmlString.Create(MyHtmlHelper.DropDownList(ParentID, ttDDL, _TrangThaiHoSo, "iID_MaTrangThai", "", "class=\"form-control\""))
                            </div>

                            <div class="col-xs-1 text-align-right">
                                <label class="control-label">Quá hạn</label>
                            </div>
                            <div class="col-xs-5">
                                <select class="form-control" id="@(ParentID)_iID_QuaHan" name="@(ParentID)_iID_QuaHan">
                                    <option>--Tất cả--</option>
                                    <option value="1">Chưa tới hạn</option>
                                    <option value="2">Quá hạn</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-1 text-align-right">
                                <label class="control-label">Quá hạn</label>
                            </div>
                            <div class="col-xs-5">
                                <select class="form-control" id="@(ParentID)_iID_MaTrangThai" name="@(ParentID)_iID_MaTrangThai">
                                    <option>--Tất cả--</option>
                                    <option value="1">Đạt cấp giấy đăng ký</option>
                                    <option value="2">Từ chối cấp GĐK</option>
                                    <option value="3">Yêu cầu bổ xung</option>
                                </select>
                            </div>
                            <div class="col-xs-6"></div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <div class="col-xs-12 text-align-center">
                            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                            <button class="btn btn-danger" type="button">Nhập lại</button>
                        </div>
                    </div>
                }
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách hồ sơ</h3>
                    <div class="box-tools">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li><a href="#" onclick="javascript:history.go(-1)"><i class="fa fa-reply-all"></i> Quay lại</a></li>
                        </ul>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body no-padding">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped dataTable" id="tblGrid">
                            <thead>
                                <tr>
                                    <th class="sorting_asc" style="width: 3%;" align="center">STT</th>
                                    <th class="sorting" style="" align="center">Mã hồ sơ</th>
                                    <th class="sorting" align="center">Ngày đến</th>
                                    <th class="sorting" align="center">Số tiếp nhận</th>
                                    <th class="sorting" align="center">Ngày tiếp nhận</th>
                                    <th class="sorting" style="text-align: center;" align="center">Doanh nghiệp</th>
                                    <th class="sorting" style="text-align: center;" align="center">Tên TACN</th>
                                    <th class="sorting" style="text-align: center;" align="center">Trạng thái hồ sơ</th>
                                    <th class="sorting" style="text-align: center;" align="center">Kết quả xử lý</th>
                                    <th style="width: 5%; text-align: center;">Xem</th>
                                    <th style="width: 5%; text-align: center;">
                                        <span>Đồng ý</span>
                                        <input type="checkbox" name="chkHoSo" id="chkHoSo" onclick="CheckAll(this.checked);" />
                                    </th>
                                    <th style="width: 5%; text-align: center;">Từ chối </th>
                                    <th style="width: 5%; text-align: center;">Quá hạn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (RC > 0)
                                    {
                                        for (int i = 0; i < RC; i++)
                                        {
                                            r = dt.Rows[i];


                                            String strView = MyHtmlHelper.ActionLink(Url.Action("Detail", "LanhDaoPhong", new { iID_MaHoSo = r["iID_MaHoSo"] }), "<span class='badge bg-blue'><i class='fa fa-fw fa-eye fa-lg'></i></span>", "Detail", "");
                                            String strYeuCauBoXung = MyHtmlHelper.ActionLink(Url.Action("yeuCauBoXung", "LanhDaoPhong", new { iID_MaHoSo = r["iID_MaHoSo"] }), "<span class='badge bg-blue'><i class='fa fa-fw fa-plus'></i></span>", "Delete", "");
                                            String strTuChoi = MyHtmlHelper.ActionLink(Url.Action("TuChoi", "LanhDaoPhong", new { iID_MaHoSo = r["iID_MaHoSo"] }), "<span class='badge bg-red'><i class='fa fa-times'></i></span>", "Delete", "");


                                            <tr>
                                                <td style="text-align: center;">@r["rownum"]</td>
                                                <td>@r["sMaHoSo"]</td>
                                                <td>@Convert.ToDateTime(r["dNgayTaoHoSo"]).ToString("dd-MM-yyyy")</td>
                                                <td>@r["sSoTiepNhan"]</td>
                                                <td>@r["dNgayTiepNhan"]</td>
                                                <td>@r["sTenDoanhNghiep"]</td>
                                                <td>@r["sTenTACN"]</td>
                                                <td>@MvcHtmlString.Create(MyHtmlHelper.LabelForDropDownList(ttDDL, r["iID_MaTrangThai"], "iID_MaTrangThai"))</td>
                                                <td>@MvcHtmlString.Create(r["iID_KetQuaXuLy"].ToString() == "1" ? "Đạt cấp giấy đăng ký" : r["iID_KetQuaXuLy"].ToString() == "2" ? "Từ chối cấp GĐK" : r["iID_KetQuaXuLy"].ToString() == "3" ? "Yêu cầu bổ xung" : "")</td>
                                                <td align="center">@MvcHtmlString.Create(strView)</td>
                                                <td align="center">
                                                    <input type='checkbox' value='@r["iID_MaHoSo"].ToString()' onclick='CheckValue();' check-group='HO_SO' id='@(ParentID)_HO_SO' name='@(ParentID)_HO_SO' />
                                                </td>
                                                <td align="center" title="Từ chối">
                                                    <a class="opentuchoi" data-id=">@r["iID_MaHoSo"]" data-toggle="modal" href="#TuChoi">
                                                        <span class='badge bg-red'><i class='fa fa-times'></i></span>
                                                    </a>
                                                </td>
                                                <td align="center" title="Quá hạn">
                                                    <a class="openthuhoi" data-id=">@r["iID_MaHoSo"]" data-toggle="modal" href="#ThuHoi">
                                                        <span class='badge bg-red'><i class='fa fa-exclamation'></i></span>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    dt.Dispose();
                                }
                            </tbody>
                        </table>
                    </div>
                </div><!-- /.box-body -->
                <div class="box-footer clearfix">
                    <div class="col-xs-3">
                        <button class="btn btn-block btn-primary" type="submit">Đồng ý</button>
                    </div>
                    <div class="col-xs-9">
                        @MvcHtmlString.Create(strPhanTrang)
                    </div>
                </div>
                @*<div class="box-footer clearfix">
                    </div>*@
            </div>
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
@{Html.RenderPartial("~/Views/LanhDaoPhong/Partial_Model_TuChoi.cshtml");}
