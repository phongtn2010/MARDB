<script>
    $(function () {
        $('#tblListData').DataTable({
            "paging": false,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": false,
            "autoWidth": false
        });
    });

    $(function () {
        $("body").on("click", ".openthuhoi", function () {
            var iID_MaHoSo = $(this).data("id");
            $("#TH_iID_MaHoSo").val(iID_MaHoSo);
        });
    });
    $(function () {
        $("body").on("click", "#btnThuHoi", function () {
            var bootstrapValidator = $("#formThuHoi").data('bootstrapValidator');
            bootstrapValidator.validate();
            if (bootstrapValidator.isValid()) {
                var formData = new FormData($("#formThuHoi")[0]);
                $.ajax({
                    url: ServerUrl + '/BoPhanMotCua/MienGiam_DaTraKQ_ThuHoiSubmit',
                    type: 'POST',
                    data: formData,
                    async: false,
                    cache: false,
                    contentType: false,
                    enctype: 'multipart/form-data',
                    processData: false,
                    success: function (response) {
                        $('#ThuHoi').modal('toggle');
                        if (response.success) {
                            showToast_Success();
                            location.href = response.value;
                        }
                        else {
                            showToast_Error();
                        }
                    },
                    error: function (response) {
                        $('#ThuHoi').modal('toggle');
                        showToast_Error();
                    }
                });
                return false;
            }
            else return;
        });
    });
</script>