                                @{
                                    long iHTTu = 0, iHTDen = 0;
                                    if (RC > 0)
                                    {
                                        int iGTMax = 0;
                                        for (int i = 0; i < RC; i++)
                                        {
                                            r = dt.Rows[i];

                                            if (i == 0)
                                            {
                                                iHTTu = Convert.ToInt64(r["rownum"]);
                                            }
                                            iGTMax++;

                                            int iTrangThai = Convert.ToInt32(r["iID_MaTrangThai"]);

                                            string sNgayTiepNhan = "", sNgayCap = "";
                                            if (String.IsNullOrEmpty(Convert.ToString(r["dNgayTiepNhan"])) == false)
