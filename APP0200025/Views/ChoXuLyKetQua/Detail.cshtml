@using System
@using System.Data
@using System.Data.SqlClient
@using System.Configuration
@using System.Collections
@using DomainModel
@using DomainModel.Controls
@using DATA0200025
@using DATA0200025.Models
@using APP0200025.Models
@using APP0200025.Controllers
@model  HangHoaModels
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout_cms.cshtml";
    string ParentID = "Detail";
    string sAction = "";
    HoSoModels hoSo = clHoSo.GetHoSoById(Model.iID_MaHoSo);

}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- Custom Tabs -->
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab_1" data-toggle="tab">Giấy đăng ký kiểm tra xác nhận chất lượng</a></li>
                    <li><a href="#tab_2" data-toggle="tab">Lịch sử xử lý hồ sơ</a></li>
                    <li><a href="#tab_3" data-toggle="tab">Hồ sơ xin cấp XNCL</a></li>
                    <li><a href="#tab_4" data-toggle="tab">Thông báo kết quả lô hàng</a></li>
                    <li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-gear"></i></a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1">

                        @{Html.RenderPartial("~/Views/Partial/Partial_Detail.cshtml", hoSo);}
                        <form action="@Url.Action("ThuHoiSubmit", "ChoXuLyKetQua", new { ParentID = ParentID })" class="form-horizontal" id="submit_form" method="POST">
                            @Html.Hidden(ParentID + "_DuLieuMoi", ViewData["DuLieuMoi"]);
                            @Html.Hidden(ParentID + "_iID_MaHangHoa", Model.iID_MaHangHoa);
                            <div class="box-footer clearfix text-center">
                                @if (Model.iID_MaTrangThai == 10 || Model.iID_MaTrangThai == 11 || Model.iID_MaTrangThai == 12)
                                {
                                    <button class="btn btn-danger btn-sm" type="submit">Thu hồi</button>
                                }
                                else
                                {
                                    <a class="btn" style="background-color:#10de79;color:white;margin-right:5px;" href="@Url.Action("SoanPhuLuc","ChoXuLyKetQua",new {iID_MaHangHoa=Model.iID_MaHangHoa})">Soạn phụ lục</a>
                                    <a class="btn btn-danger opentuchoi" data-id="@Model.iID_MaHangHoa" data-toggle="modal" href="#TuChoi" style="margin-right: 5px;" type="button">Từ chối</a>
                                    <a class="btn openyeucaubosung" style="background-color:#f1bc10;color:white;margin-right: 5px;" data-id="@Model.iID_MaHangHoa" data-toggle="modal" href="#YeuCauBoSung" data-dismiss="modal" type="button">Yêu cầu bổ sung</a>
                                    <a class="btn" style="background-color:#023658;color:white;" id="btnThoat">Thoát</a>
                                }
                            </div>
                        </form>
                    </div><!-- /.tab-pane -->
                    <div class="tab-pane" id="tab_2">
                        @{Html.RenderPartial("~/Views/Partial/Partial_HH_LichSuHoSo.cshtml", Model);}
                    </div><!-- /.tab-pane -->
                    <div class="tab-pane" id="tab_3">
                        @{Html.RenderPartial("~/Views/ChoXuLyKetQua/Partial_Model_HoSoXinCapXNCL.cshtml", Model);}
                    </div><!-- /.tab-pane -->
                    <div class="tab-pane" id="tab_4">
                        @{Html.RenderPartial("~/Views/Partial/Partial_HH_LichSuHoSo.cshtml", Model);}
                    </div><!-- /.tab-pane -->
                </div>
            </div>
        </div>
    </div>

</section>
@{Html.RenderPartial("~/Views/ChoXuLyKetQua/Partial_Model_YeuCauBoSung.cshtml");}
