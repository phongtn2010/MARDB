@using System
@using System.Collections.Specialized
@using DomainModel
@using DomainModel.Controls

@{
    Layout = null;
    string ParentID = "BS";
}


@using (Ajax.BeginForm("YeuCauBoSungSubmit", "ChoTiepNhanHoSo", new AjaxOptions
{
    OnSuccess = "OnSuccessYeuCauBoSung",
    OnBegin = "OnBeginYeuCauBoSung",

}, new { id = "formYeuCau", enctype = "multipart/form-data" }))
{
    <script>
        function OnBeginYeuCauBoSung() {
            $('html, body').animate({ scrollTop: 10 }, 'slow');
        }

        function OnSuccessYeuCauBoSung(data) {
            location.reload();
            $('#YeuCauBoSung').modal('hide');
        }

    </script>
    @Html.AntiForgeryToken()
    <div id="YeuCauBoSung" class="modal fade" role="basic" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">Yêu cầu bổ sung</h4>
                        <h5 id="scodeGD"></h5>*@
                    <div class="box-header">
                        <h3 class="box-title upperCase">Yêu cầu bổ sung hồ sơ</h3>
                        <div class="box-tools">
                            <ul class="pagination pagination-sm no-margin pull-right">
                                <li><a href="#" data-dismiss="modal"><i class="fa fa-reply-all"></i> Quay lại</a></li>
                            </ul>
                        </div>
                    </div><!-- /.box-header -->
                </div>
                <div class="modal-body">
                    <div class="scroller" style="height:200px;" data-always-visible="1" data-rail-visible1="1">

                        <div class="box-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-xs-2 labelSearch norwap">
                                        Nhập lý do ý kiến<span style="color:#D9001B;"> (*)</span>
                                    </div>
                                    <div class="col-xs-10">
                                        @MvcHtmlString.Create(MyHtmlHelper.TextArea(ParentID, "", "sNoiDung", "", "class=\"form-control\" cols=\"30\" rows='6' maxlength='1000'"))
                                        @Html.ValidationMessage(ParentID + "_" + "err_sNoiDung")
                                    </div>
                                </div>
                                <div class="col-xs-12">&nbsp;</div>
                                <div class="col-xs-12">
                                    <div class="col-xs-2 labelSearch norwap">
                                        File Đính kèm
                                    </div>
                                    <div class="col-xs-10">
                                        <input class="form-control input-sm" type="file" name="fileUpload" id="fileUpload" />
                                        <span style="color:red">Định dạng: jpg, jpeg, pdf, tif</span>
                                    </div>
                                </div>
                                @*<div> &nbsp;</div>
                                    <div class="col-xs-8 text-Align-Center">

                                    </div>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-xs-8">
                        <button class="btn btn-primary btn-sm" id="btnBoSungYeuCau" type="button">Gửi doanh nghiệp</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <button class="btn btn-danger btn-sm" data-dismiss="modal" type="button">Thoát</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Hidden(ParentID + "_iID_MaHoSo", 0)
}