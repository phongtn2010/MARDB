    <ul class="list">
    {% for link in linklists[settings.bottom_block_4_list].links %}
    <li>{{ link.title | link_to: link.url }}</li>
    {% endfor %}
    </ul>
    </div>
    {% endif %}
  {% endif %}
  

    <div class="bottom_block_5 col-md-12 col-sm-12 col-lg-3">
      
    <div class="newsletter-wrap">
               {% if settings.display_newsletter %}
   {% if settings.display_newsletter != blank %}  
{% include 'widget-newsletter' %} 
  {% endif %}
  {% endif %}
            </div>
      
      <div class="social-links"> 
     <h3>{{ settings.social-title }}</h3> 

      <ul>

<!-- twitter -->
    <li class="tile tile_twi trs_scale">
        {% if settings.show_twitter %} <a href="{{ settings.header_social_1_twi }}"><i class="fa fa-twitter"></i></a>{% endif %}
    </li>
<!-- google+ -->
    <li class="tile tile_gpl trs_scale">
        {% if settings.show_gplus %}<a href="{{ settings.header_social_2_gpl }}"><i class="fa fa-google-plus"></i></a>{% endif %}
    </li>
<!-- facebook -->
    <li class="tile tile_fcb trs_scale">
        {% if settings.show_facebook %}<a href="{{ settings.header_social_3_fcb }}"><i class="fa fa-facebook"></i></a>{% endif %}
    </li>
<!-- pinterest -->
    <li class="tile tile_pin trs_scale">
        {% if settings.show_pin %}<a href="{{ settings.header_social_4_pin }}"><i class="fa fa-pinterest"></i></a>{% endif %}
    </li>
  <!-- RSS -->
    <li class="tile tile_rss trs_scale">
        {% if settings.show_rss %}<a href="{{ settings.header_social_4_rss }}"><i class="fa fa-rss"></i></a>{% endif %}
    </li>
  <!-- Linkedin -->
    <li class="tile tile_linkedin trs_scale">
        {% if settings.show_linkedin %}<a href="{{ settings.header_social_4_linkedin }}"><i class="fa fa-linkedin"></i></a>{% endif %}
    </li>
  <!-- youtube -->
    <li class="tile tile_youtube trs_scale">
        {% if settings.show_youtube %}<a href="{{ settings.header_social_4_youtube }}"><i class="fa fa-youtube"></i></a>{% endif %}
    </li>
   <!-- Instagram -->
    <li class="tile tile_instagram trs_scale">
        {% if settings.show_instagram1 %}<a href="{{ settings.header_social_4_instagram }}"><i class="fa fa-instagram"></i></a>{% endif %}
    </li>
        
  </ul> 
      </div>
      
       <!-- Footer Payment Link -->
            <div class="payment-accept">
               {% include 'widget-payment-methods' %} 
            </div>
    </div>


  
</div>
  </div>
</div> 
 <div class="container">
