<!-- footer -->
<footer id="footer">
 
 <!-- footer block -->
 
   
<div id="bottom">
<div class="container">
<div class="row"> 

  {% if settings.display_footer_block1 %}
{% if settings.display_footer_block1 != blank %}
    <div class="bottom_block_2 col-md-4 col-sm-4 col-lg-3">
    <h3>{{ settings.bottom_block_2_title }}</h3>
    <ul class="list">
    {% for link in linklists[settings.bottom_block_2_list].links %}
    <li>{{ link.title | link_to: link.url }}</li>
    {% endfor %}
    </ul>
    </div>
    {% endif %}
  {% endif %}

{% if settings.display_footer_block2 %}
{% if settings.display_footer_block2 != blank %}
    <div class="bottom_block_3 col-md-4 col-sm-4 col-lg-3">
    <h3>{{ settings.bottom_block_3_title }}</h3>
    <ul class="list">
    {% for link in linklists[settings.bottom_block_3_list].links %}
    <li>{{ link.title | link_to: link.url }}</li>
    {% endfor %}
    </ul>
    </div>
    {% endif %}
  {% endif %}

  {% if settings.display_footer_block3 %}
{% if settings.display_footer_block3 != blank %}
   <div class="bottom_block_4 col-md-4 col-sm-4 col-lg-3">
